spawn(function() 
    local player = game:GetService("Players").LocalPlayer
    local remoteEvent = game:GetService("ReplicatedStorage"):FindFirstChild("ReplicaRemoteEvents")

    if remoteEvent and remoteEvent:FindFirstChild("Replica_ReplicaSignal") then
        while getgenv().Pickup do
            remoteEvent.Replica_ReplicaSignal:FireServer(1, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(2, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(3, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(4, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(5, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(6, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(7, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(8, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(9, "collectMoney", player)
            remoteEvent.Replica_ReplicaSignal:FireServer(10, "collectMoney", player)

            task.wait(0.5) -- Prevents excessive execution
        end
    else
        warn("Remote event not found!")
    end

    print("Pickup disabled")
end)
