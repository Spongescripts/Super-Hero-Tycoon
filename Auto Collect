spawn(function() 
    local player = game:GetService("Players").LocalPlayer
    local remoteEvent = game:GetService("ReplicatedStorage"):FindFirstChild("ReplicaRemoteEvents")

    if remoteEvent and remoteEvent:FindFirstChild("Replica_ReplicaSignal") then
        while getgenv().Pickup do
            for i = 1, 10 do
                remoteEvent.Replica_ReplicaSignal:FireServer(i, "collectMoney", player)
            end
            task.wait(0.5) -- Prevents excessive execution
        end
    else
        warn("Remote event not found!")
    end

    print("Pickup disabled")
end)
